<%- include('partials/header') %>

    <style>
        /* Hiệu ứng card */
        .card {
            border-radius: 18px;
            box-shadow: 0 4px 24px rgba(78, 84, 200, 0.12);
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .card:hover {
            transform: translateY(-6px) scale(1.02);
            box-shadow: 0 8px 32px rgba(78, 84, 200, 0.18);
        }

        /* Jumbotron mới */
        .custom-jumbotron {
            background: linear-gradient(120deg, #8f94fb 0%, #4e54c8 100%);
            color: #fff;
            border-radius: 24px;
            box-shadow: 0 4px 32px rgba(78, 84, 200, 0.18);
            padding: 3rem 2rem;
            margin-bottom: 2rem;
            position: relative;
            overflow: hidden;
        }

        .custom-jumbotron::after {
            content: "";
            position: absolute;
            top: -40px;
            right: -40px;
            width: 120px;
            height: 120px;
            background: rgba(255, 255, 255, 0.08);
            border-radius: 50%;
            z-index: 0;
        }

        .custom-jumbotron h1,
        .custom-jumbotron p {
            position: relative;
            z-index: 1;
        }

        /* Card header gradient */
        .card-header.bg-gradient-success {
            background: linear-gradient(90deg, #43e97b 0%, #38f9d7 100%);
            color: #fff;
            border-radius: 18px 18px 0 0;
        }

        .card-header.bg-gradient-info {
            background: linear-gradient(90deg, #56ccf2 0%, #2f80ed 100%);
            color: #fff;
            border-radius: 18px 18px 0 0;
        }

        /* Button hiệu ứng */
        .btn-custom {
            border-radius: 30px;
            box-shadow: 0 2px 8px rgba(78, 84, 200, 0.10);
            transition: background 0.2s, color 0.2s, box-shadow 0.2s;
        }

        .btn-custom:hover {
            background: #ffd700 !important;
            color: #2d3a5a !important;
            box-shadow: 0 4px 16px rgba(78, 84, 200, 0.18);
        }

        /* Card-footer bo góc */
        .card-footer {
            border-radius: 0 0 18px 18px;
            background: #f7f9fc;
        }

        /* System Features icon hiệu ứng */
        .card-body h6 i {
            transition: transform 0.2s;
        }

        .card-body h6:hover i {
            transform: scale(1.3) rotate(-10deg);
        }
    </style>

    <div class="row">
        <div class="col-12">
            <div class="custom-jumbotron">
                <h1 class="display-4">
                    <i class="fas fa-boxes me-3"></i>
                    Product Supplier Management System
                </h1>
                <p class="lead">Manage your suppliers and products efficiently with our comprehensive CRUD application.
                </p>
                <hr class="my-4" style="border-top: 2px solid #ffd700;">
                <p>Built with Node.js, Express, MongoDB, and Bootstrap for a modern web experience.</p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-gradient-success">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-truck me-2"></i>
                        Suppliers Management
                    </h5>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        Manage your supplier database including their contact information, addresses, and phone numbers.
                    </p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-success me-2"></i>Add new suppliers</li>
                        <li><i class="fas fa-check text-success me-2"></i>Edit supplier information</li>
                        <li><i class="fas fa-check text-success me-2"></i>View supplier details</li>
                        <li><i class="fas fa-check text-success me-2"></i>Delete suppliers</li>
                    </ul>
                </div>
                <div class="card-footer d-flex gap-2">
                    <a href="/suppliers" class="btn btn-success btn-custom flex-fill">
                        <i class="fas fa-eye me-2"></i>View Suppliers
                    </a>
                    <a href="/suppliers/new" class="btn btn-outline-success btn-custom flex-fill">
                        <i class="fas fa-plus me-2"></i>Add Supplier
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-gradient-info">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-box me-2"></i>
                        Products Management
                    </h5>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        Manage your product inventory with pricing, quantities, and supplier relationships.
                    </p>
                    <ul class="list-unstyled">
                        <li><i class="fas fa-check text-info me-2"></i>Add new products</li>
                        <li><i class="fas fa-check text-info me-2"></i>Update product details</li>
                        <li><i class="fas fa-check text-info me-2"></i>Track inventory</li>
                        <li><i class="fas fa-check text-info me-2"></i>Link to suppliers</li>
                        </p>
                </div>
                <div class="card-footer d-flex gap-2">
                    <a href="/products" class="btn btn-info btn-custom flex-fill">
                        <i class="fas fa-eye me-2"></i>View Products
                    </a>
                    <a href="/products/new" class="btn btn-outline-info btn-custom flex-fill">
                        <i class="fas fa-plus me-2"></i>Add Product
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header"
                    style="background: linear-gradient(90deg, #4e54c8 0%, #8f94fb 100%); color: #fff; border-radius: 18px 18px 0 0;">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        System Features
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <h6><i class="fas fa-database text-primary me-2"></i>Database</h6>
                            <p class="small">MongoDB with Mongoose ODM for robust data management</p>
                        </div>
                        <div class="col-md-4">
                            <h6><i class="fas fa-sitemap text-primary me-2"></i>Architecture</h6>
                            <p class="small">MVC (Model-View-Controller) pattern for clean separation</p>
                        </div>
                        <div class="col-md-4">
                            <h6><i class="fas fa-mobile-alt text-primary me-2"></i>Responsive</h6>
                            <p class="small">Bootstrap-powered responsive design for all devices</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>